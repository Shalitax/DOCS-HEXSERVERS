<header class="glass border-b border-white/20 shadow-lg">
  <div class="container mx-auto px-6 py-4">
    <div class="flex items-center justify-between">
      <h1 class="text-2xl font-bold font-display text-white">
        <%- headerTitle || 'Panel de Administración' %>
      </h1>
      <div class="flex items-center space-x-4">
        <!-- Botón Dark/Light Mode -->
        <button id="theme-toggle" class="glass px-3 py-2 rounded-lg hover:bg-white/20 transition-all" title="Cambiar tema">
          <i class="fas fa-moon text-white" id="theme-icon"></i>
        </button>
        
        <% if (typeof headerButtons !== 'undefined') { %>
          <%- headerButtons %>
        <% } %>
        <% if (typeof username !== 'undefined') { %>
          <span class="text-gray-400">
            <i class="fas fa-user-circle mr-2"></i><%= username %>
          </span>
        <% } %>
        <% if (typeof showBackButton !== 'undefined' && showBackButton) { %>
          <a href="/admin" class="glass px-4 py-2 rounded-lg hover:bg-white/20 transition-all font-medium">
            <i class="fas fa-arrow-left mr-2"></i>Volver
          </a>
        <% } %>
        <% if (typeof showHomeButton !== 'undefined' && showHomeButton) { %>
          <a href="/" class="glass px-4 py-2 rounded-lg hover:bg-white/20 transition-all font-medium">
            <i class="fas fa-home mr-2"></i>Ver Sitio
          </a>
        <% } %>
        <% if (typeof showLogoutButton !== 'undefined' && showLogoutButton) { %>
          <a href="/admin/logout" class="glass px-4 py-2 rounded-lg hover:bg-red-500/30 transition-all text-red-300 font-medium">
            <i class="fas fa-sign-out-alt mr-2"></i>Salir
          </a>
        <% } %>
      </div>
    </div>
  </div>
</header>
