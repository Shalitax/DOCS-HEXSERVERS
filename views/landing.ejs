<!DOCTYPE html>
<html lang="es" class="dark">
<head>
  <% if (typeof metadata !== 'undefined' && typeof baseMetadata !== 'undefined') { %>
    <%- include('partials/metadata') %>
  <% } else { %>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> | HexServers Docs</title>
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">
  <% } %>
  <link href="/css/output.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/styles/github-dark.min.css">
</head>
<body class="text-white">
  
  <%- include('partials/header') %>

  <div class="flex pt-20">
    <%- include('partials/sidebar') %>

    <!-- Contenido principal - Landing Page -->
    <main class="flex-1 lg:ml-80 p-8">
      <div class="max-w-4xl mx-auto">
        <!-- Botón de edición de landing page -->
        <% if (isAuthenticated) { %>
          <div class="mb-6 flex justify-end">
            <a href="/admin/landing" class="glass px-4 py-2 rounded-lg hover:bg-white/20 text-white transition-all font-medium shadow-lg">
              <i class="fas fa-edit mr-2"></i>Editar Landing Page
            </a>
          </div>
        <% } %>
        
        <article class="animate-fade-in">
          <!-- Hero Section con Glassmorphism -->
          <div class="glass rounded-2xl p-8 md:p-12 mb-8 shadow-2xl">
            <div class="markdown-content landing-content">
              <%- content %>
            </div>
          </div>
          
          <!-- Grid de categorías destacadas -->
          <% if (structure && structure.length > 0) { %>
            <div class="mt-12">
              <h2 class="text-3xl font-bold mb-6 font-display">Explora la Documentación</h2>
              <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <% structure.forEach((category, index) => { %>
                  <% if (!category.is_hidden && index < 6) { %>
                    <a href="/docs/<%= category.slug %>" class="glass rounded-xl p-6 transition-all duration-300 group cursor-pointer animate-slide-in block" style="animation-delay: <%= index * 0.1 %>s">
                      <div class="flex items-center mb-4">
                        <% if (category.icon_type === 'image') { %>
                          <img src="<%= category.icon %>" alt="" class="w-10 h-10 mr-3 object-contain" onerror="this.style.display='none'">
                        <% } else { %>
                          <i class="<%= category.icon.includes(' ') ? category.icon : 'fas ' + category.icon %> text-3xl mr-3 text-purple-400 group-hover:text-purple-300 transition-colors"></i>
                        <% } %>
                        <h3 class="text-xl font-semibold group-hover:text-white transition-colors">
                          <%= category.display_name %>
                        </h3>
                      </div>
                      <p class="text-gray-400 text-sm mb-4">
                        <%= category.totalDocs || 0 %> <%= (category.totalDocs || 0) === 1 ? 'documento' : 'documentos' %> disponible<%= (category.totalDocs || 0) === 1 ? '' : 's' %>
                      </p>
                      <div class="flex items-center text-purple-400 text-sm font-medium group-hover:text-purple-300">
                        Ver guías
                        <i class="fas fa-arrow-right ml-2 group-hover:translate-x-1 transition-transform"></i>
                      </div>
                    </a>
                  <% } %>
                <% }); %>
              </div>
            </div>
          <% } %>
        </article>
        
        <!-- Footer -->
        <footer class="mt-32 text-center text-gray-500 text-sm">
          <p>© 2026 HexServers</p>
        </footer>
      </div>
    </main>
  </div>

  <!-- Overlay para mobile -->
  <div id="sidebar-overlay" class="fixed inset-0 bg-black/50 backdrop-blur-sm hidden lg:hidden z-30"></div>

  <%- include('partials/modals') %>

  <script src="/js/main.js"></script>
</body>
</html>
