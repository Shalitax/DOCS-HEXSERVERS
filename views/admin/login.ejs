<%- include('../partials/admin-head', { pageTitle: 'Login' }) %>
<script>document.body.className += ' flex items-center justify-center';</script>

  <div class="w-full max-w-md animate-fade-in">
    <div class="glass rounded-2xl p-8 shadow-2xl border border-white/20">
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold font-display text-white mb-2">
          Login
        </h1>
      </div>

      <% if (error) { %>
        <div class="bg-red-500/20 border border-red-500/50 rounded-lg p-3 mb-6 text-red-300 text-sm">
          <i class="fas fa-exclamation-circle mr-2"></i>
          <%= error %>
        </div>
      <% } %>

      <form method="POST" action="/admin/login" class="space-y-6">
        <div>
          <label for="username" class="block text-sm font-medium text-gray-300 mb-2">
            <i class="fas fa-user mr-2"></i>Usuario
          </label>
          <input 
            type="text" 
            id="username" 
            name="username" 
            required
            class="w-full glass px-4 py-3 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-purple-500 transition-all"
            placeholder="Ingresa tu usuario"
          >
        </div>

        <div>
          <label for="password" class="block text-sm font-medium text-gray-300 mb-2">
            <i class="fas fa-lock mr-2"></i>Contraseña
          </label>
          <input 
            type="password" 
            id="password" 
            name="password" 
            required
            class="w-full glass px-4 py-3 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-purple-500 transition-all"
            placeholder="Ingresa tu contraseña"
          >
        </div>

        <button
          type="submit"
          class="w-full bg-gradient-to-r from-green-600 to-green-800 hover:from-green-700 hover:to-green-900 text-white font-semibold py-3 rounded-lg transition-all duration-300 transform hover:scale-105"
        >
          <i class="fas fa-sign-in-alt mr-2"></i>Iniciar Sesión
        </button>
      </form>

      <div class="mt-6 text-center">
        <a href="/" class="text-gray-300 hover:text-white transition-colors text-sm font-medium">
          <i class="fas fa-arrow-left mr-1"></i>Volver al sitio
        </a>
      </div>
    </div>
  </div>
<%- include('../partials/admin-footer', { adminScript: '' }) %>
