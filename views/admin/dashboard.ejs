<!DOCTYPE html>
<html lang="es" class="dark">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard | HexServers Admin</title>
  <link rel="icon" type="image/x-icon" href="/images/favicon.ico">
  <link href="/css/output.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>
<body class="text-white min-h-screen">
  
  <!-- Header -->
  <header class="glass border-b border-white/20 shadow-lg">
    <div class="container mx-auto px-6 py-4">
      <div class="flex items-center justify-between">
        <h1 class="text-2xl font-bold font-display text-white">
          Panel de Administración
        </h1>
        <div class="flex items-center space-x-4">
          <span class="text-gray-400">
            <i class="fas fa-user-circle mr-2"></i><%= username %>
          </span>
          <a href="/" class="glass px-4 py-2 rounded-lg hover:bg-white/20 transition-all font-medium">
            <i class="fas fa-home mr-2"></i>Ver Sitio
          </a>
          <a href="/admin/logout" class="glass px-4 py-2 rounded-lg hover:bg-red-500/30 transition-all text-red-300 font-medium">
            <i class="fas fa-sign-out-alt mr-2"></i>Salir
          </a>
        </div>
      </div>
    </div>
  </header>

  <div class="container mx-auto px-6 py-8">
    
    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
      <div class="glass rounded-xl p-6 border border-white/20 animate-slide-up shadow-xl">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-gray-400 text-sm mb-1">Total Documentos</p>
            <p class="text-3xl font-bold text-white"><%= docs.length %></p>
          </div>
          <div class="w-12 h-12 bg-purple-500/20 rounded-lg flex items-center justify-center">
            <i class="fas fa-file-alt text-purple-400 text-xl"></i>
          </div>
        </div>
      </div>

      <div class="glass rounded-xl p-6 border border-white/20 animate-slide-up shadow-xl" style="animation-delay: 0.1s">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-gray-400 text-sm mb-1">Categorías</p>
            <p class="text-3xl font-bold text-white"><%= categories.length %></p>
          </div>
          <div class="w-12 h-12 bg-pink-500/20 rounded-lg flex items-center justify-center">
            <i class="fas fa-folder text-pink-400 text-xl"></i>
          </div>
        </div>
      </div>

      <div class="glass rounded-xl p-6 border border-white/20 animate-slide-up shadow-xl" style="animation-delay: 0.2s">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-gray-400 text-sm mb-1">Subcategorías</p>
            <p class="text-3xl font-bold text-white"><%= subcategories.length %></p>
          </div>
          <div class="w-12 h-12 bg-blue-500/20 rounded-lg flex items-center justify-center">
            <i class="fas fa-folder-open text-blue-400 text-xl"></i>
          </div>
        </div>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="glass rounded-xl p-6 border border-white/20 mb-8 shadow-xl">
      <h2 class="text-xl font-bold mb-4 font-display">
        <i class="fas fa-bolt mr-2 text-yellow-400"></i>Acciones Rápidas
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <a href="/admin/docs/new" class="glass-dark p-4 rounded-lg hover:bg-white/10 transition-all border border-white/5 group">
          <i class="fas fa-plus-circle text-green-400 text-2xl mb-2 group-hover:scale-110 transition-transform inline-block"></i>
          <h3 class="font-semibold">Nueva Documentación</h3>
          <p class="text-sm text-gray-400">Crear una nueva guía</p>
        </a>

        <a href="/admin/categories" class="glass-dark p-4 rounded-lg hover:bg-white/10 transition-all border border-white/5 group">
          <i class="fas fa-sitemap text-purple-400 text-2xl mb-2 group-hover:scale-110 transition-transform inline-block"></i>
          <h3 class="font-semibold">Gestionar Categorías</h3>
          <p class="text-sm text-gray-400">Organizar estructura</p>
        </a>

        <a href="/admin/docs" class="glass-dark p-4 rounded-lg hover:bg-white/10 transition-all border border-white/5 group">
          <i class="fas fa-list text-blue-400 text-2xl mb-2 group-hover:scale-110 transition-transform inline-block"></i>
          <h3 class="font-semibold">Ver Todo</h3>
          <p class="text-sm text-gray-400">Lista completa de docs</p>
        </a>

        <a href="/admin/users" class="glass-dark p-4 rounded-lg hover:bg-white/10 transition-all border border-white/5 group">
          <i class="fas fa-users text-yellow-400 text-2xl mb-2 group-hover:scale-110 transition-transform inline-block"></i>
          <h3 class="font-semibold">Usuarios</h3>
          <p class="text-sm text-gray-400">Gestionar accesos</p>
        </a>
      </div>
    </div>

    <!-- Recent Docs -->
    <div class="glass rounded-xl p-6 border border-white/20 shadow-xl">
      <h2 class="text-xl font-bold mb-4">
        <i class="fas fa-clock mr-2 text-blue-400"></i>Documentación Reciente
      </h2>
      
      <% if (docs.length === 0) { %>
        <p class="text-gray-400 text-center py-8">
          No hay documentación aún. <a href="/admin/docs/new" class="text-purple-400 hover:underline">Crea la primera</a>
        </p>
      <% } else { %>
        <div class="space-y-2">
          <% docs.slice(0, 10).forEach(doc => { %>
            <div class="glass-dark p-4 rounded-lg border border-white/5 hover:bg-white/5 transition-all">
              <div class="flex items-center justify-between">
                <div class="flex-1">
                  <h3 class="font-semibold text-white mb-1"><%= doc.title %></h3>
                  <p class="text-sm text-gray-400">
                    <i class="fas fa-folder mr-1"></i><%= doc.category_name %> 
                    <i class="fas fa-chevron-right mx-1 text-xs"></i> 
                    <%= doc.subcategory_name %>
                  </p>
                </div>
                <div class="flex space-x-2">
                  <a href="/admin/docs/edit/<%= doc.id %>" class="glass px-3 py-2 rounded hover:bg-blue-500/20 transition-all text-blue-400">
                    <i class="fas fa-edit"></i>
                  </a>
                  <form method="POST" action="/admin/docs/delete/<%= doc.id %>" class="inline" onsubmit="event.preventDefault(); showConfirmModal('¿Eliminar este documento?', () => this.submit(), 'danger')">
                    <button type="submit" class="glass px-3 py-2 rounded hover:bg-red-500/20 transition-all text-red-400">
                      <i class="fas fa-trash"></i>
                    </button>
                  </form>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
      <% } %>
    </div>

  </div>

  <!-- Modal de Confirmación -->
  <div id="adminConfirmModal" class="fixed inset-0 bg-black/80 backdrop-blur-sm hidden items-center justify-center z-[60]">
    <div class="glass rounded-xl p-8 border border-white/20 max-w-md w-full mx-4 animate-slide-up shadow-2xl">
      <div id="adminConfirmIcon" class="mx-auto w-16 h-16 rounded-full flex items-center justify-center mb-4 bg-red-500/20">
        <i class="fas fa-exclamation-triangle text-2xl text-red-400"></i>
      </div>
      <p id="adminConfirmMessage" class="text-center text-white mb-6"></p>
      <div class="flex space-x-3">
        <button id="adminConfirmBtn" class="flex-1 bg-gradient-to-r from-red-500 to-red-600 px-4 py-2 rounded-lg hover:from-red-600 hover:to-red-700 transition-all text-white font-semibold">
          Confirmar
        </button>
        <button onclick="hideConfirmModal()" class="flex-1 glass px-4 py-2 rounded-lg hover:bg-white/10 transition-all">
          Cancelar
        </button>
      </div>
    </div>
  </div>

  <!-- Modal de Alerta -->
  <div id="adminAlertModal" class="fixed inset-0 bg-black/80 backdrop-blur-sm hidden items-center justify-center z-[60]">
    <div class="glass rounded-xl p-8 border border-white/20 max-w-md w-full mx-4 animate-slide-up shadow-2xl">
      <div id="adminAlertIcon" class="mx-auto w-16 h-16 rounded-full flex items-center justify-center mb-4 bg-green-500/20">
        <i class="fas fa-check-circle text-2xl text-green-400"></i>
      </div>
      <p id="adminAlertMessage" class="text-center text-white mb-6"></p>
      <div class="flex justify-center">
        <button onclick="hideAlertModal()" class="glass px-6 py-2 rounded-lg hover:bg-white/10 transition-all">
          Cerrar
        </button>
      </div>
    </div>
  </div>
  <script src="/js/admin-utils.js"></script>

</body>
</html>
