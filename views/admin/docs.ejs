<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Gestión de Documentación - HexServers Admin</title>
  <link href="/css/output.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>
<body class="text-white min-h-screen">
  
  <header class="glass border-b border-white/20 shadow-lg">
    <div class="container mx-auto px-6 py-4">
      <div class="flex items-center justify-between">
        <h1 class="text-2xl font-bold font-display text-white">
          Gestión de Documentación
        </h1>
        <div class="flex space-x-3">
          <a href="/admin/docs/new" class="bg-gradient-to-r from-green-500 to-emerald-500 px-4 py-2 rounded-lg hover:from-green-600 hover:to-emerald-600 transition-all text-white font-semibold">
            <i class="fas fa-plus mr-2"></i>Nueva Documentación
          </a>
          <a href="/admin" class="glass px-4 py-2 rounded-lg hover:bg-white/20 transition-all font-medium">
            <i class="fas fa-arrow-left mr-2"></i>Volver
          </a>
        </div>
      </div>
    </div>
  </header>

  <div class="container mx-auto px-6 py-8">
    
    <div class="glass rounded-xl border border-white/20 overflow-hidden shadow-xl">
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead class="bg-white/5">
            <tr>
              <th class="px-6 py-4 text-left text-sm font-semibold text-gray-300">Título</th>
              <th class="px-6 py-4 text-left text-sm font-semibold text-gray-300">Categoría</th>
              <th class="px-6 py-4 text-left text-sm font-semibold text-gray-300">Subcategoría</th>
              <th class="px-6 py-4 text-left text-sm font-semibold text-gray-300">Orden</th>
              <th class="px-6 py-4 text-center text-sm font-semibold text-gray-300">Acciones</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-white/5">
            <% if (docs.length === 0) { %>
              <tr>
                <td colspan="5" class="px-6 py-8 text-center text-gray-400">
                  No hay documentación disponible. <a href="/admin/docs/new" class="text-purple-400 hover:underline">Crea la primera</a>
                </td>
              </tr>
            <% } else { %>
              <% docs.forEach(doc => { %>
                <tr class="hover:bg-white/5 transition-colors">
                  <td class="px-6 py-4">
                    <div class="font-medium text-white"><%= doc.title %></div>
                    <div class="text-sm text-gray-400"><%= doc.slug %></div>
                  </td>
                  <td class="px-6 py-4 text-gray-300">
                    <i class="fas fa-folder mr-1 text-purple-400"></i>
                    <%= doc.category_name %>
                  </td>
                  <td class="px-6 py-4 text-gray-300">
                    <i class="fas fa-folder-open mr-1 text-blue-400"></i>
                    <%= doc.subcategory_name %>
                  </td>
                  <td class="px-6 py-4 text-gray-300">
                    <%= doc.order_index %>
                  </td>
                  <td class="px-6 py-4">
                    <div class="flex justify-center space-x-2">
                      <a href="/admin/docs/edit/<%= doc.id %>" class="glass px-3 py-2 rounded hover:bg-blue-500/20 text-blue-400 transition-all" title="Editar">
                        <i class="fas fa-edit"></i>
                      </a>
                      <form method="POST" action="/admin/docs/delete/<%= doc.id %>" class="inline" onsubmit="event.preventDefault(); showConfirmModal('¿Eliminar <%= doc.title %>?', () => this.submit(), 'danger')">
                        <button type="submit" class="glass px-3 py-2 rounded hover:bg-red-500/20 text-red-400 transition-all" title="Eliminar">
                          <i class="fas fa-trash"></i>
                        </button>
                      </form>
                    </div>
                  </td>
                </tr>
              <% }); %>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>

  </div>

  <!-- Modal de Confirmación -->
  <div id="adminConfirmModal" class="fixed inset-0 bg-black/80 backdrop-blur-sm hidden items-center justify-center z-[60]">
    <div class="glass rounded-xl p-8 border border-white/20 max-w-md w-full mx-4 animate-slide-up shadow-2xl">
      <div id="adminConfirmIcon" class="mx-auto w-16 h-16 rounded-full flex items-center justify-center mb-4 bg-red-500/20">
        <i class="fas fa-exclamation-triangle text-2xl text-red-400"></i>
      </div>
      <p id="adminConfirmMessage" class="text-center text-white mb-6"></p>
      <div class="flex space-x-3">
        <button id="adminConfirmBtn" class="flex-1 bg-gradient-to-r from-red-500 to-red-600 px-4 py-2 rounded-lg hover:from-red-600 hover:to-red-700 transition-all text-white font-semibold">
          Confirmar
        </button>
        <button onclick="hideConfirmModal()" class="flex-1 glass px-4 py-2 rounded-lg hover:bg-white/10 transition-all">
          Cancelar
        </button>
      </div>
    </div>
  </div>

  <!-- Modal de Alerta -->
  <div id="adminAlertModal" class="fixed inset-0 bg-black/80 backdrop-blur-sm hidden items-center justify-center z-[60]">
    <div class="glass rounded-xl p-8 border border-white/20 max-w-md w-full mx-4 animate-slide-up shadow-2xl">
      <div id="adminAlertIcon" class="mx-auto w-16 h-16 rounded-full flex items-center justify-center mb-4 bg-green-500/20">
        <i class="fas fa-check-circle text-2xl text-green-400"></i>
      </div>
      <p id="adminAlertMessage" class="text-center text-white mb-6"></p>
      <div class="flex justify-center">
        <button onclick="hideAlertModal()" class="glass px-6 py-2 rounded-lg hover:bg-white/10 transition-all">
          Cerrar
        </button>
      </div>
    </div>
  </div>

  <script src="/js/admin-modals.js"></script>

</body>
</html>
